
<div class  = "main-elements col-xs-offset-1">
<h3 class="page-header text-center ">Elements in Interasesores Lab Community</h3>

<div class="" id = "element-row">
  <br>


  <div class="element-section container">

    <div class="row">
      <div class="col-xs-3">
        <%= image_tag element.preview.url(:medium), class: "img-element"%>
      </div>
      <div class="col-xs-8">
        <h4 class = "name-text"><%= element.name %></small></h4>

        <%= form_for reserve_item, remote: true do |f| %>

        <div class="row">
          <div class=" text-right">
            <%= f.number_field :amount, value: reserve_item.amount.to_i, class: "form-control", min: 1 %>
            <%= f.hidden_field :element_id, value: element.id %>
            <div class="btn-group col-xs-8">
              <%= f.submit "Update Quantity", class: "btn btn-primary" %>
              <%= link_to "Delete", reserve_item, { data: { confirm: "Are you sure you wish to delete '#{reserve_item.element.name}' from your cart?" }, method: :delete, remote: true, class: "btn btn-danger" } %>
            </div>
          </div>
        </div>
        <% end %>
      </div>

    </div>
  </div>

  <hr>

</div>
</div>
