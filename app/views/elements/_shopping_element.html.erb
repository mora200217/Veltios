 <h3 class="text-center">Elements in Interasesores Lab Community</h3>

<div class="row">
  <div class="col-xs-6 col-xs-offset-3" id = "element-row">
    <% @elements.each do |element| %>

    <div class="well">

      <div class="row">
        <div class="col-xs-8">
          <h4><%= element.name %></small></h4>
            <%= image_tag element.preview.url(:thumb)%> 
        </div>
        <div class="col-xs-4">
          <%= form_for @reserve_item, :url => {:controller => :reserve_items, :action => :create} do |f| %>
          <h4 class="text-right">Amount: <span style="color: green"> <%= element.amount%></span></h4>
            <div class="input-group">
              <%= f.number_field :amount, value: 1, class: "form-control", min: 1, max: element.amount %>
              <div class="input-group-btn">
                <%= f.hidden_field :element_id, value: element.id %>
                <%= f.submit "Reserve", class: "btn btn-primary"%>
              </div>
            </div>
          <% end %>
        </div>

      </div>
    </div>


    <% end %>
  </div>
</div>
